{
  "name": "DL1",
  "build": { 
      "context": "..",
      "dockerfile": "Dockerfile",
      "args": {
          "NODE_VERSION": "none"
      }
  },

  "extensions": [
      "ms-python.python",
      "ms-python.vscode-pylance"
  ],
  // "runArgs": ["--runtime","habana", "-e", "HABANA_VISIBLE_DEVICES", "all"],
